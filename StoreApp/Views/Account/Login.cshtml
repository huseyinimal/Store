@model LoginModel

<div class="text-center my-5">
    <h6 class="display-6">
         <i class="fa-solid fa-right-to-bracket"></i> Giriş Yap</h6>
</div>
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div >
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <form method="post" asp-action="Login">
            <input type="hidden" asp-for="ReturnUrl" />
    <div class="form-group my-3">
        <label asp-for="Name">Kullanıcı Adı</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group my-3">
        <label asp-for="Password">Şifre</label>
        <input type="password" asp-for="Password" class="form-control" />
    </div>
    <div class="form-group my-3 d-flex justify-content-center">
        <button type="submit" class="btn btn-primary">
            <i class="fa-solid fa-right-to-bracket"></i>
            Giriş Yap</button>
    </div>
</form>
<div>
    Eğer hesabınız yoksa   Lütfen <a  asp-action="Register">üye olun.</a>
</div>
    </div>
    <div class="col-md-3"></div>
</div>
