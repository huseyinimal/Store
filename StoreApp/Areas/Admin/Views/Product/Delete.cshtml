@model Product

<div class="text-center">
    <div class="display-6">Delete</div>
    <form  method="post" asp-action="Delete">
        <div class="text-danger"  asp-validation-summary="All"></div>

        <input type="hidden" asp-for="ProductId" />
        <div class="form-group my-3">
            <label asp-for="ProductName"></label>
            <input class="form-control" asp-for="ProductName" />
        </div>
        <div class="form-group my-3">
            <label asp-for="Price"></label>
            <input class="form-control" asp-for="Price" />
        </div>
        <div class="form-group my-3">
            <div class="btn-group">
                <button type="submit" class="btn btn-primary"><i class="fa fa-trash"></i> Sil</button>
                <a asp-action="Index" class="btn btn-outline-primary"><i class="fa fa-list"></i> Ürünlerimiz</a>
            </div>

        </div>
    </form>
</div>